  <strong><%=t("caption.user_created_date")%></strong>
  <%= @user.created_at %> => <%= @user.updated_at %>
</p>
<%= link_to t("button.back"), users_path %>
<% if @current_user.has_role? :admin or
            (@current_user.has_role? :moderator and not @user.has_role? :admin) or
            @current_user.id == @user.id %> |
  <%= link_to t("button.table_edit_action"), users_edit_path(@user) %>
<% end %>
