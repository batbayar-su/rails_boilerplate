<h3><%= @role.name %></h3>
<p>
  <strong>Name:</strong>
  <%= @role.name %>
</p>
<p>
  <strong>Resource id:</strong>
  <%= @role.resource_id %>
</p>
<p>
  <strong>Resource type:</strong>
  <%= @role.resource_type %>
</p>
<p>
  <strong>Created date => Updated date:</strong>
  <%= @role.created_at %> => <%= @role.updated_at %>
</p>

<%= link_to 'Back', roles_path %>

<% if (@current_user.has_role? :admin or
            (@current_user.has_role? :moderator and not @user.has_role? :admin and not @user.has_role? :moderator) or
            @current_user.id == @user.id) and !Rails.configuration.x.immune_roles.include?(@role.name) %> |
  <%= link_to t("button.table_edit_action"), roles_edit_path(@role) %>
<% end %>

