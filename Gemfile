source 'http://rubygems.org'

# --- Core components ---
# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.7'
# Use sqlite3 as the database for Active Record
gem 'mysql2'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 4.1.0'
# Use jquery as the JavaScript library
gem 'jquery-rails'
# Windows orchin deer ene gem suulgah shaardlagatai
gem 'tzinfo-data'
# Used for password encryption
gem 'bcrypt'

# --- Added components ---
# Mina for deployment
gem 'mina'
# Authentication
gem 'cancancan'
gem 'devise'
gem 'omniauth'
gem 'omniauth-google-oauth2'
gem 'rolify'
# Delete flag
gem 'paranoia'
# Bootstrap and designing
gem 'autoprefixer-rails'
gem 'bootstrap-sass', '~> 3.2.0'
# Pagination
gem 'bootstrap-kaminari-views'
gem 'kaminari'
# Validation
gem 'client_side_validations'
# Amazon integration (SES, S3 etc..)
gem 'aws-sdk-rails'
# Notify exceptions to mail, or messaging services
gem 'exception_notification'

# --- Development and test ---
# fasten console, server, generate commands on development environment
gem 'rack-mini-profiler', group: :development
gem 'spring', group: :development
